# docker run -d -p 35000:8080 --name latest-pbasu4-springboot-helloworldapp pbasu4-springboot-helloworldapp:latest 

FROM openjdk:8-jdk-alpine
MAINTAINER pradipta.basu1@dxc.com
ARG JAR_FILE=target/*.jar
COPY ${JAR_FILE} app.jar
ENV JAVA_OPTS=""
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app.jar"]